---
import "@fontsource-variable/syne";
import Header from "../components/common/Header.astro";

interface Props {
  title: string;
  color: string;
}

const { title, color } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base">
    <Header color={color} />
    <slot />
  </body>
</html>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("show");
      }
    });
  });

  const fadeInElements = document.querySelectorAll(".fade-in");
  const rotateLeftElements = document.querySelectorAll(".rotate-left");
  const rotateRightElements = document.querySelectorAll(".rotate-right");

  fadeInElements.forEach((element) => {
    observer.observe(element);
  });

  rotateLeftElements.forEach((element) => {
    observer.observe(element);
  });

  rotateRightElements.forEach((element) => {
    observer.observe(element);
  });
</script>

<style is:global>
  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Syne Variable", sans-serif;
  }

  .system {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  .syne {
    font-family: "Syne Variable", sans-serif;
  }

  .underlined-heading {
    position: relative;
    line-height: 1.1em;
    display: block;
    z-index: 2;
  }

  .underlined-heading:before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-image: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px
    );
    background-size: 100% 1.1em;
    background-repeat: repeat-y;
    z-index: -1;
  }
</style>
