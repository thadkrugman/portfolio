---
interface Props {
  title: string;
  heading: string;
  text: string;
}

const { title, heading, text } = Astro.props;
---

<div class="bg-blurple pt-3 pb-8 lg:pt-10 lg:pb-14">
  <div class="container mx-auto">
    <h3 class="text-sm font-semibold mb-2 text-accent">{title}</h3>
    <h1
      class="underlined-heading font-medium text-[45px] lg:text-[65px] pb-2 text-content"
    >
      {heading}
    </h1>
    <p class="text-[22px] lg:text-[26px] mt-2 font-light text-content">
      {text}
    </p>
  </div>
</div>

